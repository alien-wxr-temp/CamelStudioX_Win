<Window x:Class="CamelStudioX_2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CamelStudioX_2020"
        mc:Ignorable="d"
        Title="CamelStudioX for Windows"
        Height="768" Width="1366" 
        WindowStyle="SingleBorderWindow" 
        Icon="/Resources/ico/camelstudiox.ico" 
        ResizeMode="CanResizeWithGrip" 
        WindowStartupLocation="CenterScreen"
        Background="#FFFBFBFB">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0"
              Height="22"
              VerticalAlignment="Center"
              Background="#FFFBFBFB">
            <MenuItem Header=" _File "
                      BorderThickness="0,0,0,0">
                <MenuItem Header="_New" Height="22"/>
                <MenuItem Header="_Open" Height="22"/>
                <MenuItem Header="Open _Recent" Height="22"/>
            </MenuItem>
            <MenuItem Header=" _Edit "
                      BorderThickness="0,0,0,0"/>
            <MenuItem Header=" _View "
                      BorderThickness="0,0,0,0"/>
            <MenuItem Header=" _Build "
                      BorderThickness="0,0,0,0"/>
            <MenuItem Header=" _Debug "
                      BorderThickness="0,0,0,0"/>
            <MenuItem Header=" _Tools "
                      BorderThickness="0,0,0,0"/>
            <MenuItem Header=" _Window "
                      BorderThickness="0,0,0,0"/>
            <MenuItem Header=" _Help "
                      BorderThickness="0,0,0,0"/>
        </Menu>
    </Grid>
</Window>
